
<h3 class="mb-3"> <%= @apartment.name %> </h3>
<div id="apartmentCarousel" class="carousel slide mb-5" data-ride="carousel">
  <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="<%= @apartment.image_urls.first  %>" class="d-block w-75" alt="...">
      </div>
      <div class="carousel-item">
        <img src="<%= @apartment.image_urls.second  %>" class="d-block w-75" alt="...">
      </div>
  </div>
  <a class="carousel-control-prev" href="#apartmentCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#apartmentCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<h4> <%= @apartment.tagline %> </h4>
<p> <span class="text-muted"> <%= pluralize(@apartment.toilets, 'toilet') %> </span> *
    <span class="text-muted"> <%= pluralize(@apartment.bedrooms, 'bedroom') %> </span> *
    <span class="text-muted"> <%= pluralize(@apartment.beds, 'bed') %></span>
</p>
<p> <%= @apartment.description %> </p>
