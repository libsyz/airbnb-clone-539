<div class="card-apartment d-flex mb-4">
    <img width="300" class="card-apartment__image rounded" src="<%= apartment.image_urls.first %>" alt="apartment_image">
    <div class="card-apartment__info pl-3">
      <p class="text-muted"> <%= apartment.tagline %> </p>
      <h4> <%= apartment.name %> </h4>
      <hr>
      <p> <span class="text-muted"> <%= pluralize(apartment.toilets, 'toilet') %> </span> *
          <span class="text-muted"> <%= pluralize(apartment.bedrooms, 'bedroom') %> </span> *
          <span class="text-muted"> <%= pluralize(apartment.beds, 'bed') %></span>
      </p>
    </div>
   </div>
